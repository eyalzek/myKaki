{
	"manifest_version": 2,

	"name"        : "netflix Subtitler",
	"description" : "This extension is supposed to add subtitles of your choosing to the video currently playing on netflix",
	"version"     : "0.1",

	"permissions": [
		"https://movies.netflix.com/",
		"tabs",
		"activeTab"
	],

	"background": {
		"scripts"    : ["app/js/background.js"],
		"persistent" : true
	},

	"page_action": {
		"default_icon"  : "app/images/icon.png",
		"default_title" : "netflix Subtitler",
		"default_popup" : "app/popup.html"
	}
}