{
  "manifest_version": 2,

  "name": "netflix Subtitler",
  "description": "This extension is supposed to add subtitles of your choosing to the video currently playing on netflix",
  "version": "0.1",

  "permissions": [
    "https://movies.netflix.com/",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icon.png", //{                    // optional
    //"19": "images/icon19.png",           // optional
    //"38": "images/icon38.png"            // optional
    //},
    "default_title": "netflix Subtitler",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
    }
  //"options_page": "options.html"
//  "browser_action": {
//    "default_icon": "icon.png",
//    "default_popup": "popup.html"
//  }
}